<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.rsr.lstradella.louvrefirmapp.Views.FirmwareUpdateFragment"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/default_margin_left"
    android:layout_marginStart="@dimen/default_margin_left"
    android:layout_marginRight="@dimen/default_margin_right"
    android:layout_marginEnd="@dimen/default_margin_right">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/header_internal_margin_vertical"
            android:id="@+id/layout_header">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/louvre_board"
            android:id="@+id/board"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/header_internal_margin_vertical"/>
            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/header_info_firm_upload"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/default_header_text_size"
                android:layout_below="@+id/board"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firmware_version_text"
                android:textSize="@dimen/default_header_text_size"/>
            <TextView
                android:id="@+id/tv_demo_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_left"
                android:layout_marginStart="@dimen/default_margin_left"
                android:textSize="@dimen/default_header_text_size"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
            <LinearLayout
                android:id="@+id/progressbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:visibility="gone">
                    <ProgressBar
                        android:id="@+id/writing_progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="13dp"
                        style="@android:style/Widget.ProgressBar.Horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/default_info_text_size"
                        android:text="@string/progress_bar_label"
                        android:layout_gravity="center"/>
            </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_todo_info"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/todo_info_1"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/default_info_text_size"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/nxp_footer"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/architech_color"/>
    </RelativeLayout>

</LinearLayout>
